<p style="color: green"><%= notice %></p>

<div class="container">

  <h1>Posts</h1>

  <div class="p-2">
    <%= link_to "New post", new_post_path, class: "btn btn-success" %>
  </div>

  <div id="posts">
    <% @posts.each do |post| %>
      <%= render post %>
      <p>
        <%= link_to "Show this post", post %>
      </p>
    <% end %>
  </div>
  
</div>
