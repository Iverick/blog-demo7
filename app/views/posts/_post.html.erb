<div id="<%= dom_id post %>">
  <h2>
    <a href="<%= post_path post.id %>" class="text-decoration-none text-dark">
      <%= post.title %>
    </a>
  </h2>

  <h6>posted by <%= link_to post.user.name, user_path(post.user) %></h6>

  <h6><%= pluralize(post.views, "view") %></h6>

  <div>
    <%= post.body %>
  </div>

</div>
